{   
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "noEmit": true,
        "allowJs": true,
        "baseUrl": "src",
        "paths": {
            "*": [
                "src/*"
            ]
        }
    },
    "exclude": ["node_modules", "build"],
    "include": ["**/*.js", "src"]
}